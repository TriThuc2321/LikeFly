<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:LikeFly.ViewModel"
             x:Class="LikeFly.View.NewTicketTypeView">
    <ContentPage.BindingContext>
        <vm:NewTicketTypeViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Button Command="{Binding NavigationBack}"/>
            <Entry Placeholder="Nhập tên hạng vé" Text="{Binding NewTicketTypeName}"></Entry>
            <Entry Placeholder="Nhập phần trăm hạng vé" Text="{Binding NewTicketTypePercent}"></Entry>
          
            <Button Text="Add" Command="{Binding AddCommand}"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>