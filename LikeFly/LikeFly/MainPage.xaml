    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home Page">
        <ShellContent Route="HomePage" ContentTemplate="{DataTemplate views:HomeView}" Style="{DynamicResource BaseStyle}"/>
    </FlyoutItem>
    
    <FlyoutItem Title="User view">
        <ShellContent Route="User" ContentTemplate="{DataTemplate views:UserView}" Style="{DynamicResource BaseStyle}"/>
    </FlyoutItem>
    
