    <TabBar>
        <ShellContent 
                     Icon="homeIcon.png"
                     ContentTemplate="{DataTemplate views:HomeView}" Style="{DynamicResource BaseStyle}"/>
        <ShellContent
                     Icon="bookIcon.png"
                     ContentTemplate="{DataTemplate views:UserView}" Style="{DynamicResource BaseStyle}"/>
        <ShellContent 
                     Icon="heartIcon.png"
                     ContentTemplate="{DataTemplate views:HomeView}" Style="{DynamicResource BaseStyle}"/>
        <ShellContent
                     Icon="userIcon.png"
                     ContentTemplate="{DataTemplate views:UserView}" Style="{DynamicResource BaseStyle}"/>
    </TabBar>
</Shell>
